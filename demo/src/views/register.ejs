<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .error-text {
            color: red;
            font-size: 14px;
        }
    </style>
</head>

<body class="bg-light">

<div class="container mt-5">
    <div class="col-md-4 mx-auto card p-4 shadow-sm">
        <h3 class="text-center mb-3">Register</h3>

        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <form method="POST" action="/register" id="registerForm">

            <div class="mb-3">
                <label>Email</label>
                <input type="text" name="username" id="username" class="form-control">
                <div id="emailError" class="error-text"></div>
            </div>

            <div class="mb-3">
                <label>Password</label>
                <input type="password" name="password" id="password" class="form-control">
                <div id="passwordError" class="error-text"></div>
            </div>

            <div class="mb-3">
                <label>Confirm Password</label>
                <input type="password" name="confirm" id="confirm" class="form-control">
                <div id="confirmError" class="error-text"></div>
            </div>

            <button type="submit" class="btn btn-dark w-100" id="submitBtn" disabled>
                Register
            </button>

        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
$(document).ready(function () {

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const passwordRegex = /^(?=.*[0-9])(?=.*[!@#$%^&*])[A-Za-z0-9!@#$%^&*]{6,}$/;

    function validate() {

        let valid = true;

        const email = $("#username").val();
        const password = $("#password").val();
        const confirm = $("#confirm").val();

        // Email
        if (!emailRegex.test(email)) {
            $("#emailError").text("Invalid email format");
            $("#username").addClass("is-invalid");
            valid = false;
        } else {
            $("#emailError").text("");
            $("#username").removeClass("is-invalid");
        }

        // Password
        if (!passwordRegex.test(password)) {
            $("#passwordError").text("At least 6 chars, 1 number & 1 special char");
            $("#password").addClass("is-invalid");
            valid = false;
        } else {
            $("#passwordError").text("");
            $("#password").removeClass("is-invalid");
        }

        // Confirm
        if (password !== confirm || confirm === "") {
            $("#confirmError").text("Passwords do not match");
            $("#confirm").addClass("is-invalid");
            valid = false;
        } else {
            $("#confirmError").text("");
            $("#confirm").removeClass("is-invalid");
        }

        $("#submitBtn").prop("disabled", !valid);
    }

    $("#username, #password, #confirm").on("keyup", validate);

});
</script>

</body>
</html>
